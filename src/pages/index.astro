  <body>
    
    <form action="">
		<h2>Tilføj opskrift</h2>
      <label for="timestamp">Oprettet:</label>
      <input type="date" name="timestamp" id="timestamp" />
      <label for="recipe">Opskrift</label>
      <input type="text" name="recipe" id="recipe" />

      <label for="description">Beskrivelse</label>
      <textarea name="description" id="description"></textarea>
      <label for="ingredients">Ingredienser</label>
      <textarea name="ingredients" id="ingredients"></textarea>

      <label for="serves">Portioner</label>
      <input type="number" name="serves" id="serves" min="1" max="10" />

      <h3>Tid</h3>
      <label for="tid">Tid</label>
      <select name="tid" id="tid">
        <option value="15">15 min</option>
        <option value="30">30 min</option>
        <option value="45">45 min</option>
        <option value="60">60 min</option>
      </select>

      <h3>Allergener</h3>
      <label for="allergen1"><input type="checkbox" name="allergens" id="allergen1" /> Laktosefri</label>
      <label for="allergen2"><input type="checkbox" name="allergens" id="allergen2" /> Glutenfri</label>
      <label for="allergen3"><input type="checkbox" name="allergens" id="allergen3" /> Fri for æg</label>
      <label for="allergen4"><input type="checkbox" name="allergens" id="allergen4" /> Uden nødder</label>

      <h3>SU-Venlig?</h3>
      <label for="notStudentFriendly"
        ><input type="radio" name="studentFriendly" id="notStudentFriendly" value="no" /> Ikke SU-Venlig</label
      >
      <label for="isStudentFriendly"
        ><input type="radio" name="studentFriendly" id="isStudentFriendly" value="yes" /> SU-Venlig</label
      >

      <label for="origin">Land</label>
      <select name="countries" id="countries">
        <option value="Danmark">Danmark</option>
        <option value="USA">USA</option>
        <option value="Italien">Italien</option>
        <option value="Indien">Indien</option>
        <option value="Japan">Japan</option>
      </select>

      <button type="button">Gem opskrift</button>
    </form>
